  </head>
  <body>
    

    <section class="vh-100" style="background-color: #eee;">
  <div class="container h-100 " >
    <div class="row  d-flex justify-content-center  align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>
                <p style="color:red ; align-items: center; margin-left: 100px;"><%=locals.error%></p>

                <form  action="/userHome" method="post" role="form"  id="form" class="mx-1 mx-md-4"  >

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-user fa-lg me-3 fa-fw" aria-hidden="true"></i>
                    <div class="form-outline flex-fill mb-0">
                      <input name="firstname" type="text" id="firstname" class="form-control" required=""  placeholder="First Name" onkeyup="validateName()"/>
                      <p id="firstnameError" class="text-danger mt-3"></p>
                    </div>
                  </div> 

                  <div class="d-flex flex-row align-items-center mb-4">
                     <i class="fas fa-envelope fa-lg me-3 fa-fw"></i> 
                    <div class="form-outline flex-fill mb-0">
                      <input name="lastname" type="text" id="lastname" class="form-control" required=""  placeholder="lastname" onkeyup="validatelsName()"/>
                      <p id="lastnameError" class="text-danger mt-3"></p>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                     <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <input name="email" type=" email" id="email" class="form-control" required pattern="[^@]+@[^@]+.[a-zA-Z]{2,6}" placeholder="E-Mail" onkeyup="validateEmail()">
                      
                      <p id="emailError" class="text-danger mt-3"></p>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                     <i class="fas fa-key fa-lg me-3 fa-fw"></i> 
                    <div class="form-outline flex-fill mb-0">
                      <input name="password" type="password" id="password" class="form-control" required="" placeholder="Password" onkeyup="passwordValidate()"/>
                      
                      <p id="passwordError" class="text-danger mt-3"></p>
                    </div>
                  </div>

                   

                  <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                  <a href="/" class="link-primary me-3"><p class="small fw-bold mt-2 pt-1 mb-0">Already have an account?</a></p>
                  <button type="submit" value="submit"  class="btn btn-primary btn-lg">Register</button>
                  </div>

                </form>

              </div>
              <div class="col-md-12 col-lg-8 col-xl-6 d-flex align-items-center order-1 order-lg-2 ">

                <img src="/images/form-v7.png"
                  class="img-fluid " alt="Sample image">

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
