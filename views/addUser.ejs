<body style="margin: 0%;background-color: black;">
<div class="main" style="background-color: black;" >
    <!-- Sing in  Form -->
    <section class="sign-in">
        <div class="container">
            <div class="signin-content">
                <div class="signin-image">
                    <figure><img src="/images/signin-image.jpg" alt="sing up image"></figure>
                    <!-- <a href=""  class="signup-image-link">Create an account </a> -->
                </div>

                <div class="signin-form">
                    <h2 class="form-title">Add uesr</h2>
                    <p style="color:red ; align-items: center; margin-left: 100px;"><%=locals.error%></p>
                    <form method="post" class="register-form" id="login-form" action="" >
                        <div class="form-group">
                            <label for="firstname"><i class="zmdi zmdi-account material-icons-name"></i></label>
                            <input type="text" name="firstname" id="firstname" class="input-text" placeholder="FirstName" required="" onkeyup="validateName()">
                            <p id="firstnameError" class="text-danger mt-3"></p>
                        </div>
                        <div class="form-group">
                            <label for="lastname"><i class="zmdi zmdi-account material-icons-name"></i></label>
                            <input type="text" name="lastname" id="lastname" placeholder="LastName" required="" onkeyup="validatelsName()"/>
                            <p id="lastnameError" class="text-danger mt-3"></p>
                        </div>
                        <div class="form-group">
                            <label for="email"><i class="zmdi zmdi-account material-icons-name"></i></label>
                            <input type="email" name="email" id="email" class="input-text"  placeholder="Email" required="" onkeyup="validateEmail()">
                            <p id="emailError" class="text-danger mt-3"></p>
                        </div>
                        <div class="form-group">
                            <label for="password"><i class="zmdi zmdi-lock"></i></label>
                            <input type="password" name="password" id="password" placeholder="Password" required="" onkeyup="passwordValidate()"/>
                            <p id="passwordError" class="text-danger mt-3"></p>
                        </div>
                        <div class="form-group">
                            <input type="checkbox" name="remember-me" id="remember-me" class="agree-term" />
                            <label for="remember-me" class="label-agree-term"><span><span></span></span>Remember me</label><br>
                            <a href="/adminlogin">Back To Home</a>
                        </div>
                        <p style="color:red ;"><%=locals.wrong%></p>
                        <div class="form-group form-button">
                            <input type="submit" name="signin" id="signin" class="form-submit" value="Add User"/>
 
                        </div>
                       
                       
                    </form>
